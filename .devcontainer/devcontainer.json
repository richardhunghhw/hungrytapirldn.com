// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Local Node Env",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/typescript-node:0-20",
	"build": {
		"dockerfile": "Dockerfile"
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/flexwie/devcontainer-features/op:1": {}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "./scripts/container-postCreate.sh",
	// Use 'postStartCommand' to run commands every time the container starts.
	"postStartCommand": "./scripts/container-postStart.sh",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"AmazonWebServices.aws-toolkit-vscode",
				"bungcip.better-toml",
				"ms-azuretools.vscode-docker",
				"ms-vscode-remote.remote-containers",
				"ms-vscode.js-debug-nightly",
				"donjayamanne.githistory",
				"github.vscode-github-actions",
				"hashicorp.terraform",
				"yzhang.markdown-all-in-one",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss",
				"dsznajder.es7-react-js-snippets"
			]
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8002,
		8788,
		8789
	],
	// Predefined ports
	"portsAttributes": {
		"8002": {
			"label": "Remix Live Reload"
		},
		"8788": {
			"label": "Remix"
		},
		"8789": {
			"label": "Config Store Worker"
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root",
	// See https://code.visualstudio.com/remote/advancedcontainers/environment-variables
	"runArgs": [
		"--env-file",
		".devcontainer/devcontainer.env"
	],
	// See https://code.visualstudio.com/remote/advancedcontainers/add-local-file-mount
	"mounts": [
		"source=/boot/config/ssh/root,target=/root/.ssh,type=bind,consistency=cached"
	]
}